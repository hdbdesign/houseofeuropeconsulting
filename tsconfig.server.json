{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "server",
    "types": ["node"],
    "baseUrl": "server",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "client"]
} 